#! /bin/sh
#
# This script installs the TIGCCLIB.
# For this, 2 directories have to be created. One (include) contains header
# files, the other (lib) contains libraries.
#
# NOTE: the script need to be kept in sync with modifications to tigcc.tpr, fargo.tpr, flashos.tpr and pstarter.tpr !

if [ -z "$PREFIX_GCC4TI" ]; then
    echo "Install_step_3: error: \$PREFIX_GCC4TI not defined"
    echo "Install_step_3: error: you should not run this script directly if you don't know what you are doing."
    exit 1
fi

isbsd=`uname -a | grep "BSD"`
isos=`uname -a | grep "opensolaris"`
if [ "x$isbsd" = "x" -a "x$isos" = "x" ]; then
    #Assume GNU make
    make=make
else
    make=gmake
fi
if [ "x$isos" = "x" ]; then
    #Assume GNU or BSD install
    install=install
else
    install=ginstall
fi

iswin1=`echo $GCC4TIHOST | grep -E -i "msys|mingw|cygwin"`
iswin2=`uname -a | grep -E -i "msys|mingw|cygwin"`
if [ "x$iswin1" = "x" -a "x$iswin2" = "x" ]; then
    tigcc=tigcc
else
    tigcc=tigcc.exe
fi

echo GCC4TI script: Installing TIGCCLIB...
echo GCC4TI script: Installing include files...
rm -Rf "$PREFIX_GCC4TI/include"
cp -Rf ../tigcclib/include "$PREFIX_GCC4TI/"
# only symlink if the file system is case sensitive
if [ ! -f "$PREFIX_GCC4TI/include/asm/OS.h" ]
then ln -sf "os.h" "$PREFIX_GCC4TI/include/asm/OS.h"
fi

echo GCC4TI script: building tigcc.a, flashos.a and fargo.a...
# Let's exercise our newly compiled toolchain.
TIGCCSAVE="$TIGCC"
PATHSAVE="$PATH"
TIGCC="$PREFIX_GCC4TI"
# Prefix the PATH, so that older installs of TIGCC/GCC4TI hopefully don't get in the way.
PATH="$PREFIX_GCC4TI/bin:$PATH"
export TIGCC
export PATH
rm -Rf "$PREFIX_GCC4TI/lib"
${install} -d "$PREFIX_GCC4TI/lib"
(cd ../tigcclib/src &&
TIGCC="$PREFIX_GCC4TI" ${tigcc} qsort.c bsearch.c atoi.c atol.c strtol.c strtoul.c fopen.c fclose.c ftell.c fseek.c fputc.c fgetc.c fwrite.c fread.c fgets.c rename.c unlink.c tmpnam.c fsetbufsize.c pushfifonode.c homestorepair.c dll.c grayversion.c findprogramvar.c snprintf.c vsnprintf.c bzero.s bcopy.s memcpy.s memmove.s memset.s mulsi.s divsi.s udivsi.s modsi.s umodsi.s diventry.s muldi.s ashldi.s ashrdi.s lshrdi.s divdi.s udivdi.s moddi.s umoddi.s addbf.s subbf.s mulbf.s divbf.s negbf.s floatbf.s ufloatbf.s fixbf.s cmpbf.s fpentry.s fpcall.s bc.s gray.s rand.s realloc.s calloc.s clrscr.s printf.s fprintf.s cbprintf.s fputchar.s puts.s strputchar.s fputs.s fscanf.s cbscanf.s sscanf.s fgetchar.s fgetchrc.s gets.s getsn.s atof.s push_shortint.s push_longint.s push_longlongint.s nocallback.s kbd_queue.s registertimer.s freetimer.s getappid.s enter_ghost_space.s enter_ghost_space_1.s enter_ghost_space_2.s hw_version.s exit.s atexit.s assert.s rowread.s isextalnum.s isextpunct.s homestore.s dummyhandler.s malloc_throw.s calloc_throw.s realloc_throw.s hrealloc_throw.s loaddll_throw.s gray_throw.s prgstart.s trampoffset.s startup/_kernel_program_header.s startup/_preos_program_header.s startup/_kernel_library_header.s startup/_preos_library_header.s startup/_kernel_program_stub.s startup/_preos_program_stub.s startup/_kernel_library_stub.s startup/_kernel_bss_table.s startup/_kernel_export_table.s startup/_nostub_comment_header.s startup/_startup_entry_point.s startup/_execute_in_ghost_space.s startup/_kernel_format_relocs.s startup/_compressed_format_relocs.s startup/_mlink_format_relocs.s startup/_get_jump_table.s startup/_detect_calc.s startup/_fill_calculator_var.s startup/_test_for_89.s startup/_test_for_92p.s startup/_test_for_v200.s startup/_test_for_any_calc.s startup/_test_for_specific_calc_1.s startup/_test_for_specific_calc_2.s startup/_test_against_specific_calc_1.s startup/_test_against_specific_calc_2.s startup/_wrong_calc.s startup/_calc_is_ok_1.s startup/_reject_unofficial_os_1.s startup/_reject_unofficial_os_2.s startup/_reject_unofficial_os_3.s startup/_compare_ams_1_01.s startup/_compare_ams_1_05.s startup/_compare_ams_2_00.s startup/_compare_ams_2_01.s startup/_compare_ams_2_02.s startup/_compare_ams_2_03.s startup/_compare_ams_2_04.s startup/_compare_ams_2_05.s startup/_compare_ams_2_07.s startup/_compare_ams_2_08.s startup/_compare_ams_2_09.s startup/_compare_ams_3_00.s startup/_compare_ams_3_01.s startup/_compare_ams_3_10.s startup/_detect_ams.s startup/_ams_too_low.s startup/_nostub_failure_message.s startup/_kernel_failure_message.s startup/_ams_version_is_ok.s startup/_detect_ams_1_05.s startup/_detect_ams_2_03.s startup/_detect_ams_2_08.s startup/_detect_ams_2_09.s startup/_calc_is_ok_2.s startup/_reg_relative_a2.s startup/_reg_relative_a3.s startup/_reg_relative_a4.s startup/_reg_relative_a5.s startup/_complex_main_support_file.s startup/_save_all_regs.s startup/_save_d3d5.s startup/_save_d3d5_a5.s startup/_save_a5.s startup/_optimize_rom_calls.s startup/_set_file_in_use_bit.s startup/_kernel_format_rom_calls.s startup/_compressed_format_rom_calls.s startup/_mlink_format_rom_calls.s startup/_kernel_format_data_var.s startup/_kernel_format_data_var_test.s startup/_kernel_format_data_var_copy.s startup/_kernel_format_data_var_direct.s startup/_kernel_format_data_var_msg.s startup/_compressed_format_data_var.s startup/_compressed_format_data_var_test.s startup/_compressed_format_data_var_copy.s startup/_compressed_format_data_var_direct.s startup/_compressed_format_data_var_msg.s startup/_mlink_format_data_var.s startup/_mlink_format_data_var_test.s startup/_mlink_format_data_var_copy.s startup/_mlink_format_data_var_direct.s startup/_mlink_format_data_var_msg.s startup/_data_var_name_start.s startup/_data_var_msg.s startup/_kernel_format_bss.s startup/_compressed_format_bss.s startup/_mlink_format_bss.s startup/_out_of_memory.s startup/_error_msg.s startup/_nostub_error_msg.s startup/_kernel_error_msg.s startup/_smart_error_msg.s startup/_save_screen.s startup/_fline_internal_emulator.s startup/_fline_internal_emulator_1_r.s startup/_fline_internal_emulator_1_j4.s startup/_fline_internal_emulator_1_j6.s startup/_fline_internal_emulator_2_j6.s startup/_fline_internal_emulator_2_r.s startup/_fline_internal_emulator_3_j6.s startup/_fline_internal_emulator_3_r_j6.s startup/_fline_internal_emulator_3_j4.s startup/_fline_internal_emulator_3_r_j4.s startup/_fline_internal_emulator_3_r.s startup/_fline_internal_emulator_4_j6.s startup/_fline_internal_emulator_4_j6_u.s startup/_fline_internal_emulator_4_j6_s.s startup/_fline_internal_emulator_4_j4.s startup/_fline_internal_emulator_4_j4_u.s startup/_fline_internal_emulator_4_j4_s.s startup/_fline_internal_emulator_4_r.s startup/_constructed_jsr.s startup/_constructed_jmp.s startup/_error_return_support.s startup/_error_return_support_ams_1.s startup/_error_return_support_ams_x.s startup/_initialize_bss.s startup/_initialize_bss_1.s startup/_initialize_bss_2.s startup/_handle_constructors.s startup/_save_all_registers_main.s startup/_save_the_sp.s startup/_save_the_sp_complex.s startup/_call_user_main.s startup/_simple_main_jump.s startup/_handle_destructors.s startup/_nostub_retval.s startup/_nostub_retval_var.s startup/_kernel_retval.s startup/_kernel_retval_var.s startup/_return_from_program.s startup/_call_function_vector.s startup/_compressed_format_decoding.s startup/_mlink_format_decoding.s startup/_calculator.s startup/_save_sp.s startup/_reference_symbols.s sprite8.s sprite16.s sprite32.s clipsprite8.s clipsprite16.s clipsprite32.s ptrtohandle.s strtod.s -o "tigcc" -ar -standalone -Os -Wall -W -Wwrite-strings -fomit-frame-pointer -D_GENERIC_ARCHIVE -WA,-g,-t &&
TIGCC="$PREFIX_GCC4TI" ${tigcc} startup/_fargo021_library_header.s startup/_fargo021_program_header.s  -o "fargo" -ar -n libf021 -Os -Wall -W -Wwrite-strings -WA,-g,-t -DKERNEL_FORMAT_BSS -DKERNEL_FORMAT_DATA_VAR &&
TIGCC="$PREFIX_GCC4TI" ${tigcc} startup/_flash_os_header.s -o "flashos" -ar -n flashos -Os -Wall -W -Wwrite-strings -WA,-g,-t -DUSE_TI89 -DUSE_TI92PLUS -DUSE_V200 -DMIN_AMS=100 -DKERNEL_FORMAT_BSS -DKERNEL_FORMAT_DATA_VAR -DSAVE_SCREEN &&
${install} *.a "$PREFIX_GCC4TI/lib" &&
cd ../../scripts) || exit 1

echo GCC4TI script: building pstarter.o...
(cd ../tigcclib/starters &&
${tigcc} pstarter.s -o "pstarter" -n pstarter -Os -Wall -W -Wwrite-strings -ffunction-sections -fdata-sections -save-temps -Wa,--defsym,ttunpack=1,-l -WA,-g,-t --optimize-nops --optimize-returns --optimize-branches --optimize-moves --optimize-tests --optimize-calcs --remove-unused --cut-ranges --merge-constants -DUSE_TI89 -DUSE_TI92PLUS -DUSE_V200 -DMIN_AMS=100 -DKERNEL_FORMAT_BSS -DKERNEL_FORMAT_DATA_VAR -DSAVE_SCREEN &&
${install} pstarter.o "$PREFIX_GCC4TI/lib" &&
cd ../../scripts) || exit 1
TIGCC="$TIGCCSAVE"
PATH="$PATHSAVE"
export TIGCC
export PATH

echo GCC4TI script: Installing example files...
rm -Rf "$PREFIX_GCC4TI/examples"
cp -Rf ../tigcclib/examples "$PREFIX_GCC4TI"

exit 0
